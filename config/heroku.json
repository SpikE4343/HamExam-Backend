{
  "host": "hamexam.herokuapp.com",
  "port": 80,
  "mongodb": "MONGODB_URI",
  "cors":{
    "whitelist":
      ["http://hamexam.netlify.com"]
  },
  "auth": {
    "token": { 
      "secret": "FEATHERS_AUTH_SECRET"
    },
    "local": {},
    "bitbucket": {
      "clientID": "your bitbucket client id",
      "clientSecret": "your bitbucket client secret",
      "permissions": {
        "scope": ["account"]
      }
    },
    "dropbox": {
      "clientID": "your dropbox client id",
      "clientSecret": "your dropbox client secret",
      "permissions": {
        "scope": []
      }
    },
    "facebook": {
      "clientID": "your facebook client id",
      "clientSecret": "your facebook client secret",
      "permissions": {
        "scope": ["public_profile","email"]
      }
    },
    "github": {
      "clientID": "your github client id",
      "clientSecret": "your github client secret",
      "permissions": {
        "scope": []
      }
    },
    "google": {
      "clientID": "your google client id",
      "clientSecret": "your google client secret",
      "permissions": {
        "scope": ["profile"]
      }
    }
  }
}
